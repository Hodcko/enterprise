<jsp:root xmlns="http://www.w3.org/1999/xhtml"
          xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          version="2.0" xmlns:spring="http://www.springframework.org/tags">
    <html>
    <head><title>StudentRegistration</title></head>
    <body style="background-color: powderblue">
    <h2 style="text-align: center"><c:out value="Регистрация студента"/></h2>

    <form style="text-align: center" action="${pageContext.request.contextPath}/validation" method="post">
        <fieldset>
            <legend><c:out value="Регистрационные данные"/></legend>
            <br/><label for="name"><spring:message code="page.name"/></label>
            <br/><input id="name" type="text" name="name"/><br/>
            <br/><label for="secondName">Фамилия</label>
            <br/><input id="secondName" type="text" name="secondName"/><br/>
            <br/><label for="email">Адрес электронной почты</label>
            <br/><input id="email" type="text" name="email"/><br/>
            <br/><label for="age">Ваш возраст</label>
            <br/><input id="age" type="text" name="age"/><br/>

            <h2 style="text-align: center"><c:out value="Выберите язык программирования для изучения"/></h2>
            <label>
                <input type="checkbox" name="langTypeJava" value="java"/>
            </label> Java
            <label>
                <input type="checkbox" name="langTypePHP" value="php"/>
            </label> PHP
            <label>
                <input type="checkbox" name="langTypeC" value="c++"/>
            </label> C++

            <br/><input type="submit" name="userType" value="student"/>
        </fieldset>

    </form>
    </body>
    </html>
</jsp:root>
